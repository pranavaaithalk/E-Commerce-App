<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".AboutusActivity">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_profile"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pranava Aithal K"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/roleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lead Developer"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_marginBottom="8dp" />
    <TextView
        android:id="@+id/bioText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Computer and Communication Egineering"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NMAM Institute of Technology"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:padding="10dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/linkedinButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_inlogo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="LinkedIn" />

        <View
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <ImageButton
            android:id="@+id/instagramButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_instalogo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Instagram" />
    </LinearLayout>

</LinearLayout>
